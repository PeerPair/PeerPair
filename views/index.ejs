<body>
    <h2>Go To Your Room</h2>
    <br>
    <div id= "room-container" class="roomList">
        <% Object.keys(rooms).forEach(room => {%> 
            <br>
            <div> <%= room %> </div>
            <a href="/chat/<%= room  %> ">Join</a>
            <br>
            <%  }) %> 
        <form action="/room" method="POST" class="roomForm">
            <input name="room"  type="text" required class="roomNameInput">
            <br>
            <button type="submit" class="btn">New Room</button>
        </form>
    </div>
    </body>
</html>